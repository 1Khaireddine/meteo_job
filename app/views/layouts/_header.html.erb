<header class="p-3 bg-dark text-white main-header">
	<div class="container-fluid">
		<div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
			<a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
				<%= image_tag 'logo.png', class:"logo" %>
			</a>

			<ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
				<li><a href="#" class="nav-link px-2 text-secondary">Home</a></li>
				<li><a href="#" class="nav-link px-2 text-white">Features</a></li>
				<li><a href="#" class="nav-link px-2 text-white">Pricing</a></li>
				<li><a href="#" class="nav-link px-2 text-white">FAQs</a></li>
				<li><a href="#" class="nav-link px-2 text-white">About</a></li>
			</ul>

			<form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
				<input type="search" class="form-control form-control-dark" placeholder="Search..." aria-label="Search">
			</form>


			<div class="text-end ms-lg-auto">
				<% if user_signed_in? %>
					<div class="flex-shrink-0 dropdown">
						<a href="#" class="d-block link-dark text-decoration-none" id="dropdownUser2" data-bs-toggle="dropdown" aria-expanded="true">
							<%= image_tag 'avatar.png', class:"rounded-circle avatar-profile" %>
						</a>
						<ul class="dropdown-menu text-small shadow" aria-labelledby="dropdownUser2" style="position: absolute; inset: 0px auto auto 0px; margin: 0px; transform: translate(-112px, 34px);" data-popper-placement="bottom-end">
							<li><a class="dropdown-item" href="#">New project...</a></li>
							<li>
								<%= link_to 'Offers', admin_offers_path, class: "dropdown-item" %>
							</li>
							<li>
								<%= link_to 'New offer', new_admin_offer_path, class: "dropdown-item" %>
							</li>
							<li><a class="dropdown-item" href="#">Profile</a></li>
							<li><hr class="dropdown-divider"></li>
							<li>
								<%= link_to 'Sign Out', destroy_user_session_path, class:"dropdown-item text-danger" , method: :delete, data: { turbo_method: :delete, confirm: 'Are you sure you want to sign out?' } %>
							</li>
						</ul>
					</div>

				<% else %>
					<%= link_to 'Sign in', new_user_session_path, class: "btn btn-outline-light me-2" %>
					<%= link_to 'Sign up', new_user_registration_path, class:"btn btn-warning" %>
				<% end %>
			</div>
		</div>
	</div>
</header>


