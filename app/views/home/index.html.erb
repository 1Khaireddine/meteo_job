<% if user_signed_in? %>
  <h1>Welcome, <%= current_user.company.name %>!</h1>
  <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, data: { turbo_method: :delete, confirm: 'Are you sure you want to sign out?' } %>

<% else %>
  <%= link_to 'Sign in', new_user_session_path%>
  <%= link_to 'Sign up', new_user_registration_path%>
<% end %>